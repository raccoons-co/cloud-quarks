{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DenyAllSouthAmericaRegions",
            "Effect": "Deny",
            "Action": [
                "*"
                ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:RequestedRegion": [
                        "sa-east-1"
                    ]
                }
            }
        }
    ]
}